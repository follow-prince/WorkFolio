<style>
  @import url("https://fonts.googleapis.com/css2?family=Abel&display=swap");

  /* github-stats-container ------------ start */
  .title-for-github {
    font-size: 27px;
    margin-left: 20px;
    margin-top: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 900;
  }
  .home-card-p {
    font-family: "Abel", sans-serif;
    color: var(--github-stats-box);
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px rgba(161, 161, 161, 0.5);
    text-decoration: none;
    font-weight: 900;
  }
  .home-card-p-a {
    color: var(--github-stats-box-a);
    font-family: "Abel", sans-serif;
    font-size: 13px;
    font-weight: 700;
  }
  .github-stats-container {
    position: relative;
    background: var(--github-show-box-background);
    border-radius: 15px;
  }

  .github-stats-container::after {
    border-radius: 15px;
    content: "";
    position: absolute;
    top: -1px;
    left: -1px;
    right: -1px;
    bottom: -1px;
    background: linear-gradient(45deg, #ffd800, #ff5520, #750cf2, #0cbcf2);
    z-index: -1;
  }
  .github-stats-container::before {
    border-radius: 15px;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(25deg, #ffd800, #ff5520, #750cf2, #0cbcf2);
    z-index: -2;
    filter: blur(10px);
  }

  /* =================================== */
  .box {
  }

  .skills {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 50em) {
    .box {
      border-radius: 16px;
    }

    .skills {
      display: grid;
    }
  }
</style>
