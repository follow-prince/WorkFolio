<style>
  /* __________________________________________ */
  /* ________________________________________________________________ */
  /* iphone frame  */

  /* Default styling for larger screens */
  .iphone {
    /* Add box shadow and border styles */
    box-shadow:
      inset 0 0 3px 0 rgba(0, 0, 0, 0.2),
      0 0 0 1px #999,
      0 0 30px 0px rgba(0, 0, 0, 0.7);
    border: 5px solid #d9dbdc;
    /* Set background color */
    background: #f8f8f8;
    /* Add padding and border radius */
    padding: 5px;
    border-radius: 50px;
    /* Set fixed height and width */
    height: 877px;
    width: 453px;
    /* Center horizontally and add spacing */
    position: relative;
    margin: 8%;
    /* Scale to fit within view */
    transform: scale(0.8);
    /* Adjust horizontal position */
    top: -80px;
  }
  @media (max-width: 550px) {
    .iphone {
      right: 12%;
    }
  }

  /* Media query for smaller screens */
  @media (max-width: 400px) {
    .iphone {
      /* Adjust dimensions for smaller screens */
      width: 340px;
      height: 650px;
      /* Adjust negative margin for spacing */
      margin: -10% auto;
      /* Remove padding */
      padding: 0;
      /* Adjust scaling */
      transform: scale(0.8);
      /* Adjust horizontal position */
      right: 1%;
    }
  }
  @media (max-width: 330px) {
    .iphone {
      /* Adjust dimensions for smaller screens */
      width: 270px;
      height: 550px;
      /* Adjust negative margin for spacing */
      margin: -10% auto;
      /* Remove padding */
      padding: 0;
      /* Adjust scaling */
      transform: scale(0.8);
      /* Adjust horizontal position */
      right: 1%;
    }
  }

  .iphone-top {
    padding: 5px 110px 40px;
    position: relative;
  }

  .iphone-top .speaker {
    display: block;
    width: 70px;
    height: 6px;
    margin: 0 auto;
    border-radius: 6px;
    background: #292728;
  }

  .iphone-top .camera {
    display: block;
    margin: 0 auto;
    height: 10px;
    width: 10px;
    border-radius: 50%;
    margin-bottom: 13px;
    background: #333;
  }

  .iphone-top .sensor {
    display: block;
    width: 15px;
    height: 15px;
    float: left;
    background: #333;
    margin-top: -5px;
    border-radius: 50%;
  }

  .top-bar,
  .bottom-bar {
    display: block;
    width: 423px;
    height: 15px;
    position: absolute;
    left: -5px;
  }

  .top-bar {
    top: 65px;
    border-left: 5px solid #bbb;
    border-right: 5px solid #bbb;
  }

  .bottom-bar {
    bottom: 65px;
    border-left: 5px solid #bbb;
    border-right: 5px solid #bbb;
  }

  .iphone-screen {
    background: #eee;
    border: 1px solid #fff;
    height: 677px;
    width: 405px;
    margin: 0 auto;
    border: 1px solid rgba(0, 0, 0, 0.9);
    border-radius: 15px;
    overflow: hidden;
    background-size: cover;
    background-repeat: no-repeat;
  }
  @media (max-width: 400px) {
    .iphone-screen {
      width: 320px;
      height: 480px;
    }
  }
  @media (max-width: 330px) {
    .iphone-screen {
      width: 250px;
      height: 380px;
    }
  }

  .iphone-screen img {
    width: 100%;
  }

  .buttons .on-off,
  .buttons .up,
  .buttons .down,
  .buttons .sleep {
    display: block;
    background: #ccc;
    position: absolute;
    border-radius: 2px 0px 0px 2px;
  }

  .buttons .on-off {
    height: 40px;
    width: 3px;
    top: 100px;
    left: -8px;
  }

  .buttons .up,
  .buttons .down,
  .buttons .sleep {
    height: 60px;
    width: 5px;
    left: -10px;
  }

  .buttons .up {
    top: 170px;
  }

  .buttons .down {
    top: 250px;
  }

  .buttons .sleep {
    left: auto;
    right: -10px;
    top: 170px;
    border-radius: 0px 2px 2px 0px;
  }

  .iphone-bottom {
    padding: 10px 0 0;
  }

  .iphone-bottom span {
    display: block;
    margin: 0 auto;
    width: 68px;
    height: 68px;
    background: #ccc;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      #303233 0%,
      #b5b7b9 50%,
      #f0f2f2 69%,
      #303233 100%
    );
    position: relative;
  }

  .iphone-bottom span:after {
    content: "";
    display: block;
    width: 60px;
    height: 60px;
    background: #fff;
    border-radius: 50%;
    position: absolute;
    left: 4px;
    top: 4px;
  }
</style>
